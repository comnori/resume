{
  "name": "gatsby-resume",
  "image": "mcr.microsoft.com/devcontainers/base:jammy",
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "installGradle": true,
      "installMaven": true,
      "version": "21",
      "jdkDistro": "ms"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },
  "postCreateCommand": {
    "Init": "${containerWorkspaceFolder}/.devcontainer/scripts/init.sh"
  },
  "forwardPorts": [
    8080
  ],
  "portsAttributes": {
    "8080": {
      "label": "Gatsby development server"
    },
    "64120": {
      "label": "SonarLint"
    }
  },
  "remoteEnv": {
    "NODE_ENV": "development"
  },
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "comnori.js-awesome-soho-extension-pack",
        "GatsbyHub.gatsbyhub",
        "unifiedjs.vscode-mdx",
        "yzhang.markdown-all-in-one"
      ],
      "settings": {
        "extension-uninstaller.uninstall": [
          "vscjava.vscode-java-pack"
        ],
        "editor.codeActionsOnSave": {
          "source.fixAll": true,
          "source.organizeImports": true
        },
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.fontFamily": "'D2Coding ligature',Menlo, Monaco, 'Courier New', monospace",
        "editor.foldingImportsByDefault": true,
        "editor.fontLigatures": true,
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "files.exclude": {
          "**/.DS_Store": true,
          "**/.git": true,
          "**/.hg": true,
          "**/.svn": true,
          "**/CVS": true,
          "**/node_modules": true,
          "**/Thumbs.db": true
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.fontFamily": "'D2codingLigature Nerd Font Mono', monospace"
      }
    }
  }
}
